<!--components/dailyData.wxml-->
<view class="layoutDailyleft">
  <view class='title'>国内实时动态</view>
  <view class='layoutDailyleftText danger'>
    <view class='text'>累计确诊:</view>
    <text class="num">{{dailyTextContent.confirmedCount}}</text>
    <view class='thanYes'>较昨日{{incrData.confirmedIncr}}</view>
  </view>
  <view class='layoutDailyleftText warn'>
    <view class='text'>境外输入:</view>
    <text class="num">{{dailyTextContent.suspectedCount}}</text>
    <view class='thanYes'>较昨日{{incrData.suspectedIncr}}</view>
  </view>
  <view class='layoutDailyleftText error'>
    <view class='text'>现存无症状:</view>
    <text class="num">{{dailyTextContent.seriousCount}}</text>
    <view class='thanYes'>较昨日{{incrData.seriousIncr}}</view>
  </view>
  <view class='layoutDailyleftText dethod'>
    <view class='text'>累计死亡:</view>
    <text class="num">{{dailyTextContent.deadCount}}</text>
    <view class='thanYes'>较昨日{{incrData.deadIncr}}</view>
  </view>
  <view class='layoutDailyleftText curd'>
    <view class='text'>累计治愈:</view>
    <text class="num">{{dailyTextContent.curedCount}}</text>
    <view class='thanYes'>较昨日{{incrData.curedIncr}}</view>
  </view>
  <view class="layoutDailyRight">
    <view style="flex:1;"></view>
    <view>
      <!-- <view>数据更新于：{{updateTime}}</view> -->
      <view>数据来源：各地卫健委</view>
    </view>
  </view>
</view>