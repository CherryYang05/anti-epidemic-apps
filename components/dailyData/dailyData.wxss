.layoutDailyleft {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 100%;
  width: 700rpx;
  padding-left: 20rpx;
  font-weight: 700;
}

.layoutDailyleft .title {
  font-size: 55rpx;
  color:black;
}

.layoutDailyleftText {
  font-size: 20px;
  display: flex;
  align-items: flex-end;
}

.layoutDailyleftText .text {
  font-size: 13px;
}

.layoutDailyleftText .num {
  font-size: 45rpx;
  margin-left: 10rpx;
  line-height: 40rpx;
}

.layoutDailyleftText .thanYes {
  font-size: 10px;
  color: #666;
  padding-left: 5px;
}

.layoutDailyleft .error {
  color: rgb(235, 164, 72);
}

.layoutDailyleft .danger {
  color: #f56c6c;
}

.layoutDailyleft .warn {
  color: rgb(230, 176, 96);
}

.layoutDailyleft .dethod {
  color: #909399;
}

.layoutDailyleft .curd {
  color: #67c23a;
}

