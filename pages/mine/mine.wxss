/* pages/mine/mine.wxss */
.minecontainer{
  display: flex;
  flex-direction: column;
}
.top{
  background: #5676E3;
  width: 100%;
  height: 250rpx;
  position: absolute;
  z-index: 1
}
.user{
  display: flex;
  flex-direction: row;
  padding-bottom: 5%;
  z-index: 2
}
.userpic{
  width: 130rpx;
  height: 130rpx;
  margin-left: 10%;
  margin-top: 5%;
  border-radius: 50%;
  /* padding: 10rpx; */
}
.name{
  margin-top: 7%;
  margin-left: 4%;
  display: flex;
  flex-direction: column;
}
.username{
  font-size: 43rpx;
  color: white;
}
.company{
  font-size: 32rpx;
  color: gainsboro;
  padding-top: 5rpx;

}
.phone{
  margin-left: auto;
  margin-right: auto;
  width: 90%;
  height: auto;
  padding-left: 10rpx;
  padding-right: 10rpx;
  padding-top: 4%;
  padding-bottom: 4%;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 50rpx;
  border:gainsboro 1rpx solid;
  background: white;
}
.toast{
  width:80%;
  color:#777;
}
.newphone input{
  display: inline-block;
  width:400rpx;
  color: #5676E3;
  vertical-align: middle;
  margin: 20rpx 10rpx;
  border:1rpx solid #999;
}
.newphone text{
  display: inline-block;
  font-size: 30rpx;
}
.icon{
  margin-left: 20rpx;
  width: 50rpx;
  height: 50rpx
}
.icontext{
  padding-left: 20rpx;
  font-size: 30rpx;
}
.jiantou{
  margin-left: 60%;
  width: 40rpx;
  height: 40rpx;
}
.choices{
  margin-top: 350rpx;
  border-radius: 40rpx;
  border:gainsboro 1rpx solid;
  width: 90%;
  height: auto;
  margin-right: auto;
  margin-left: auto;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
}
.choice{
  height: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-bottom: 5rpx
}
.line{
  height: 1rpx;
  width: 90%;
  background: gainsboro;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 0rpx;
  padding: 1rpx
}
.tuichudenglu{
  margin-top: 50rpx;
  margin-left: auto;
  margin-right: auto;
  background: whitesmoke;
  border-radius: 70rpx;
  border:red 1rpx solid;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 80%;
  height: 100rpx
}
.tuichupic{
  width: 50rpx;
  height: 50rpx;
  padding-right: 20rpx;
}
/* 弹框 */

.btn{
  display: inline-block;
  width: 23% !important;
  padding:2% !important;
  border-radius: 25rpx !important;
  font-size: 30rpx !important; 
  border:1rpx solid #64a1b0;
  background-color:#64a1b0 ;
  margin: 2% auto !important;
  text-align: center;
  color: white;
  font-weight: 500 !important;
}

