/* pages/shop/shop.wxss */
.searchtop{
  display: flex;
  flex-direction: row;
  font-size: 35rpx;
  padding-left:5% ;
  align-items: center;
  padding-bottom: 3%;
  background: #F0F0F0;
}
.search{
  margin-top: 25rpx;
  padding-left: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #D2D2D2;
  border-radius: 40rpx;
  width: 92%;
  height: 70rpx;
}
.searchpic{
  width: 60rpx;
  height: 60rpx;
  padding-right: 20rpx;
}
.searcharea{
  width: 60%;
  font-size: 29rpx;
}
.carousel{
  width: auto;
  height: 300rpx;
}
.testpic{
  width: 100%;
  height: 300rpx;
}
.recommendarea{
  margin-top: 5%;
  display: flex;
  flex-direction: row;
}
.recommendobj{
  width: 25%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
}
.objpic{
  width: 80%;
  height: 150rpx;
  border-radius: 30rpx;
  margin-left: auto;
  margin-right: auto;
  background: gainsboro;
}
.objtext{
  padding-top: 5%;
  font-size: 35rpx;
  margin-left: auto;
  margin-right: auto;
  width:100rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.tabbar{
  width: 100%;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
}
.tabbar{
  padding-top: 10rpx;
  width:95%;
  height: 65rpx;
  display: flex;
  flex-direction: row;
  margin-right: auto;
  margin-left: auto;
}
.tab{
  padding-left: 4%;
  padding-right: 3%;
  width: auto;
  color:#9A9A9A;
  font-size: 37rpx;
  height: 80rpx;
  border: 2rpx #D2D2D2 solid;
  font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif
}
.active{
  color:#1FC3CF;
  font-weight: bolder;
  border-bottom: #1FC3CF 5rpx solid;
}
.line{
  width: 100%;
  height: 2rpx;
  margin-top: 5rpx;
  margin-bottom: 10rpx;
  background: #9A9A9A;
}
.price{
  margin-top: 15rpx;
  margin-left: 20rpx;
  margin-bottom: 10rpx;
  font-size: 35rpx;
  color: orange;
}
.case-page{
  padding:20rpx;
  background: #F0F0F0;
  margin-top: 20rpx;
}
.list-masonry{
  padding-top: 10rpx;
  column-count: 2;
  column-gap: 20rpx;
}
.item-masonry{
  background-color: #fff;
  break-inside: avoid; 
  box-sizing: border-box; 
  border-radius: 20rpx;
  border:2rpx #D2D2D2 solid;
  
  font-size: 30rpx;

}
.item-masonry image {
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  width: 100%;
}
.item-masonry text {
  display: flex;
  padding:2% 5%;
  justify-content: center;
}