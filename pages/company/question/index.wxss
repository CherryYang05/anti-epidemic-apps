/* pages/news/onepagenews/onepagenews.wxss */
.membercard{
  width: 100%;
  padding: 4% 2%;
  font-size: 32rpx;
  border-top:1rpx solid #e6e6e6;
  border-bottom:1rpx solid #e6e6e6;
}
.membercard image{
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border:1rpx solid #999;
  vertical-align: middle;
  margin: 1% 2% 3% 1%;
}
.adate{
  display: inline-block;
  font-size: 27rpx;
  color: #8f8f8f;
  margin-left: 2%;
  margin-right: 2%;
  text-align: left;
}
.date{
  display: block;
  font-size: 27rpx;
  color: #8f8f8f;
  text-align: right;
  margin-right: 5%;
}
.formitem{
  margin-left: 3%;
}
.name{
  display: inline-block;
}
.handlemem{
  /* display: inline-block; */
  /* position: relative;
  left: 60%; */
  float: right;
  width: 10%;
  padding:1%;
  border-radius: 25rpx;
  font-size: 30rpx;
  border:1rpx solid #0099cc;
  background-color:#0099cc ;
  margin-top: 5%;
  margin-right: 10%;
  text-align: center;
  color: white;
}
.collectline{
  background-color: #f3f2f2;
  font-size: 30rpx;
  text-align: center;
}
.Ncontainer {
  display: flex;
  flex-direction: column;
  padding: 50rpx 0;
  border-bottom: 1rpx solid #b7b7b7 ;
}

.header {
  
  width: 100%;
  height: auto;
  margin: 30rpx auto;
}

.headertext {
  font-size: 42rpx;
  font-weight: 600;
  text-align: center;
  width: 95%;
}
.content{
  width: 80%;
  height: auto;
  margin: 20rpx auto;
  border-bottom: 1rpx dashed #a7a7a7;
}
.btn{
  margin: 30rpx 10% !important;
  display: inline-block;
  width: 30% !important;
  background-color: cornflowerblue;
  color: white;
  font-size: 32rpx;
}