/* 分页器 */
.sorter{
  width:50%;
  margin:5% auto;
  border: 1rpx solid rgb(187, 186, 186);
  border-radius: 25rpx;
  text-align: center;
}
.direction_left{
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  border-right:  1rpx solid rgb(206, 206, 206);
  padding-right: 20rpx;
}
.direction_right{
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  border-left:  1rpx solid rgb(206, 206, 206);
  padding-left:20rpx;
}
.pageinput{
  display: inline-block;
  width: 50rpx;
  vertical-align: middle;
}
.inputtext{
  font-size: 35rpx;
  color:#555;
}
.write{
  width: 70rpx;
  height: 70rpx;
  position: fixed;
  top: 90%;
  left: 85%;
  border: 1rpx solid #b7b7b7;
  border-radius: 50%;
}
.out{
  width: 70rpx;
  height: 70rpx;
  position: fixed;
  top: 90%;
  left: 5%;
  /* border: 1rpx solid #b7b7b7; */
  /* border-radius: 50%; */
}
