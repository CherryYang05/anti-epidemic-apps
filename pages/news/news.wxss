/* pages/news/news.wxss */

.newscontainer {
  display: flex;
  flex-direction: column;
}

.top {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 80rpx;
  background: #5676e3;
}

.toptext {
  font-size: 42rpx;
  color: white;
  display: flex;
  align-items: center;
  margin-left: 44%;
}

.refresh {
  width: 55rpx;
  height: 55rpx;
  margin-top: auto;
  margin-bottom: auto;
  margin-left: 33%;
}

.news {
  display: flex;
  flex-direction: column;
  padding-left: 3%;
  padding-top: 3%;
}

.newsinfo {
  display: flex;
  flex-direction: row;
}

.newspic {
  width: 30%;
  height: 150rpx;
}

.newsdetail {
  padding-left: 2%;
  display: flex;
  flex-direction: column;
}

.newstime {
  color: gray;
  font-size: 29rpx;
  padding-bottom: 2%;
  padding-top: 2%;
}

.newshead {
  font-size: 35rpx;
  font-weight: bold;
  color: black;
  padding-bottom: 2%;
  height: 40rpx;
  overflow: hidden;
}

.newsintroduction {
  color: grey;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.line {
  margin-top: 3%;
  margin-left: -3%;
  background: #5676e3;
  width: 103%;
  height: 4rpx;
}
